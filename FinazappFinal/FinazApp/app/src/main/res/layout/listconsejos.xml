<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/cv_consejos"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    app:cardCornerRadius="12dp"
    app:cardElevation="4dp"
    app:cardUseCompatPadding="true"
    android:background="@drawable/card_border">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="8dp"
        android:orientation="horizontal"
        android:gravity="center_vertical">

        <!-- LottieAnimationView para la animaciÃ³n a la izquierda -->
        <com.airbnb.lottie.LottieAnimationView
            android:id="@+id/lottie_consejo"
            android:layout_width="151dp"
            android:layout_height="117dp"
            app:lottie_autoPlay="true"
            app:lottie_loop="true"
            app:lottie_rawRes="@raw/consejo"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="8dp" />

        <!-- TextView para el consejo (texto largo) -->
        <TextView
            android:id="@+id/consejoTextView"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="8dp"
            android:text="Consejo"
            android:textColor="@android:color/black"
            android:textSize="16sp"
            android:ellipsize="end"
            android:maxLines="4"
            android:layout_weight="1"/>

    </LinearLayout>

</androidx.cardview.widget.CardView>
