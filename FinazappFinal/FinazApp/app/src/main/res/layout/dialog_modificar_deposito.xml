<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingTop="16dp"
    android:paddingHorizontal="16dp">

    <!-- Título del diálogo -->
    <TextView
        android:id="@+id/titulo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        style="@style/TxtVerdeMedianoItalic"
        android:text="Modificar depósito"
        android:gravity="center" />

    <!-- Campo para el monto -->
    <com.google.android.material.textfield.TextInputEditText
        android:id="@+id/editTextMonto"
        style="@style/EstiloEditText"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:layout_margin="8dp"
        android:background="@drawable/bg_btn_borde_amarillo"
        android:hint="Monto"
        android:inputType="numberDecimal"
        android:padding="4dp" />

    <!-- Campo para el nombre del depositante -->
    <com.google.android.material.textfield.TextInputEditText
        android:id="@+id/editTextNombreDepositante"
        style="@style/EstiloEditText"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:layout_margin="8dp"
        android:background="@drawable/bg_btn_borde_amarillo"
        android:hint="Nombre del depositante"
        android:inputType="text"
        android:padding="4dp" />

    <!-- Campo para la fecha -->
    <EditText
        android:id="@+id/editTextFecha"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:hint="Fecha"
        android:focusable="false"
        android:clickable="true"
        android:padding="4dp"
        style="@style/EstiloEditText"
        android:background="@drawable/bg_btn_borde_amarillo"
        android:layout_margin="8dp" />

    <!-- Botón para eliminar el depósito -->
    <Button
        android:id="@+id/btnEliminarDeposito"
        style="@style/EstiloBordeVerde"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="8dp"
        android:layout_marginTop="8dp"
        android:background="#001A41"
        android:text="Eliminar depósito"
        android:textColor="@color/blanco"
        android:textSize="20sp" />

    <!-- Mensaje de advertencia -->
    <TextView
        android:id="@+id/txtAdvertenciaModificar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        style="@style/TxtVerdePequenoItalic"
        android:text="Modifica los datos del depósito o elimínalo si es necesario." />

</LinearLayout>