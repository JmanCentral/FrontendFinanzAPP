<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingTop="16dp"
    android:paddingHorizontal="16dp">

    <!-- Título del diálogo -->
    <TextView
        android:id="@+id/titulosds"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        style="@style/TxtVerdeMedianoItalic"
        android:text="Modificar Alcancia"
        android:gravity="center" />

    <!-- Campo para el nombre de la alcancía -->
    <com.google.android.material.textfield.TextInputEditText
        android:id="@+id/editTextNombreAlcancia"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:hint="Nombre de la alcancía"
        android:inputType="text"
        android:padding="4dp"
        style="@style/EstiloEditText"
        android:background="@drawable/bg_btn_borde_amarillo"
        android:layout_margin="8dp"/>

    <!-- Campo para la meta de la alcancía -->
    <com.google.android.material.textfield.TextInputEditText
        android:id="@+id/editTextMeta"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:hint="Meta"
        android:inputType="numberDecimal"
        android:padding="4dp"
        style="@style/EstiloEditText"
        android:background="@drawable/bg_btn_borde_amarillo"
        android:layout_margin="8dp"/>

    <!-- Campo para el saldo actual de la alcancía -->
    <com.google.android.material.textfield.TextInputEditText
        android:id="@+id/editTextSaldoActual"
        style="@style/EstiloEditText"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:layout_margin="8dp"
        android:background="@drawable/bg_btn_borde_amarillo"
        android:enabled="false"
        android:hint="Saldo Actual en 0 al crearla"
        android:inputType="numberDecimal"
        android:padding="4dp"
        android:textColor="@color/amarillo_oscuro" />

    <!-- Campo para el código de la alcancía -->
    <com.google.android.material.textfield.TextInputEditText
        android:id="@+id/editTextCodigo"
        style="@style/EstiloEditText"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:layout_margin="8dp"
        android:background="@drawable/bg_btn_borde_amarillo"
        android:focusable="false"
        android:hint="Código Generado Automaticamente"
        android:inputType="text"
        android:padding="4dp"
        android:textColor="@color/amarillo_oscuro" />

    <!-- Campo para la fecha de creación de la alcancía -->
    <EditText
        android:id="@+id/editTextFechaCreacion"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:hint="Fecha de creación"
        android:focusable="false"
        android:clickable="true"
        android:padding="4dp"
        style="@style/EstiloEditText"
        android:background="@drawable/bg_btn_borde_amarillo"
        android:layout_margin="8dp"/>

    <!-- Botón para eliminar el depósito -->
    <Button
        android:id="@+id/btnEliminarAlcancia"
        style="@style/EstiloBordeVerde"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="8dp"
        android:layout_marginTop="8dp"
        android:background="#001A41"
        android:text="Eliminar alcancia"
        android:textColor="@color/blanco"
        android:textSize="20sp" />

    <!-- Mensaje de advertencia -->
    <TextView
        android:id="@+id/txtAdvertenciaModificar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        style="@style/TxtVerdePequenoItalic"
        android:text="Modifica los datos de la alcancia o elimínala si es necesario." />

</LinearLayout>